<h1><%= @title %></h1>

<div>
  	<%= form_tag createplaylist_path, :method => 'get', :id=>'products_search' do %>
  	<%= hidden_field_tag :direction, params[:direction] %>
  	<%= hidden_field_tag :sort, params[:sort] %>
  	<%= hidden_field_tag :sort, params[:choice] %>
  		<p>
    	<%= text_field_tag :search, params[:search] %>
    	<%= submit_tag "Search", :name => 'search_button' %>
  		</p>
	<% end %>
  </div>


<%= form_for (@playlist) do |f| %>
	<%= render 'shared/error_messages' , :object => f.object %>
	
	
	<%= hidden_field_tag :direction, params[:direction] %>
  	<%= hidden_field_tag :sort, params[:sort] %>
  	<%= hidden_field_tag :sort, params[:choice] %>
  		<p>
    	<%= text_field_tag :search, params[:search] %>
    	<%= submit_tag "Search", :name => 'search_button' %>
  		</p>

	
	
  <%= render "#{@playlist.current_step}_step", :f => f %>
  <p><%= f.submit "Continue" %></p>
  <p><%= f.submit "Back", :name => "back_button" unless @playlist.first_step? %></p>
<% end %>



