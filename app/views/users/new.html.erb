<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' , :object => f.object %>
  
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :passwordNE %>
  </div>
  <div class="field">
    <%= f.label :passwordNE_confirmation, "Confirmation" %><br/>
    <%= f.password_field :passwordNE_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>